<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyy.dao.SettingMapper">

	<select id="find" parameterType="com.cyy.domain.Setting" resultType="com.cyy.domain.Setting">
        select * from setting 
		<where>
			and type = #{type}
			<if test="key != null">
			and `key` = #{key}
			</if>
		</where> 
    </select>

    <update id="update" parameterType="com.cyy.domain.Setting">
        update setting
        <set>
            <if test="value != null">`value`=#{value},</if>
        </set>
        where type=#{type} and `key` = #{key}
	</update>
</mapper>