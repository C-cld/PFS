<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyy.finance.dao.FundMapper">
    <resultMap type="com.cyy.finance.domain.Record" id="recordMap">
        <id property="id" column="id" />
        <result property="productId" column="product_id" />
        <result property="confirm" column="confirm" />
        <result property="createDate" column="create_date" />
    </resultMap>

    <select id="searchFund" resultType="com.cyy.finance.domain.Fund">
        select id, name, type from fund;
    </select>

    <insert id="insertFund" parameterType="com.cyy.finance.domain.Fund">
        insert into fund (id, name, type) values (#{id}, #{name}, #{type})
    </insert>

    <select id="searchInvestmentRecord" resultMap="recordMap">
        select product_id, confirm, create_date from record
         <if test="fundCode != null">
             where product_id = #{fundCode}
         </if>
    </select>

</mapper>